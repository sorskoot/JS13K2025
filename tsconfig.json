{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "allowJs": false,
        "strict": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,
        "target": "esnext",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "lib": ["esnext", "dom"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["aframe"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/**/.vert", "src/**/.frag", "src/types/**/*.d.ts"],
    "typedocOptions": {
        "entryPoints": ["./src/index.ts"],
        "out": "docs"
    }
}
